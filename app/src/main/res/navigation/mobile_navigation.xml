        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_report"
        android:name="com.qrolic.fitnessapp.fragment.ReportFragment"
        android:label="Report"
        tools:layout="@layout/fragment_report" />

