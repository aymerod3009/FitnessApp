<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_baseline_star_rate_24"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableTint="@color/yellow"
        android:text="Rate this App"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="If you enjoy using this app, would you mind taking a moment to rate it? It wan't take more than a minute. Thanks for your support !"
        android:textColor="@color/gray"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/tvRateItNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="right"
        android:text="Rate it now"
        android:textAllCaps="true"
        android:textColor="@color/dark_pink"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/tvNoThanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="right"
        android:text="NO, thanks"
        android:textAllCaps="true"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>